{
  "name": "calvin",
  "displayName": "CALVin",
  "version": "1.0.0",
  "author": {
    "name": "Mark Wibrow",
    "email": "m.wibrow@gmail.com",
    "url": "https://github.com/mwibrow"
  },
  "homepage": "https://github.com/mwibrow/CALVin",
  "private": true,
  "main": "electron/electron.js",
  "config": {
    "ionic_bundler": "webpack",
    "ionic_webpack": "./config/webpack.config.js"
  },
  "build": {
    "productName": "CALVin",
    "appId": "com.mwibrow.calvin",
    "electronVersion": "1.7.8",
    "asar": true,
    "files": [
      "www/**/*",
      "electron/*"
    ],
    "dmg": {
      "icon": "build/icon.icns"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.education"
    },
    "linux": {
      "category": "Education"
    },
    "win": {
      "icon": "build/icon.ico"
    }
  },
  "scripts": {
    "start": "ionic-app-scripts serve",
    "clean": "ionic-app-scripts clean",
    "build": "ionic-app-scripts build",
    "lint": "ionic-app-scripts lint",
    "ionic:build": "ionic-app-scripts build",
    "ionic:serve": "ionic-app-scripts serve",
    "electron": "electron .",
    "electron dist": "electron .",
    "electron:dev": "IONIC_ELECTRON_DEBUG=1 electron .",
    "electron:build": "npm run build-all && node scripts/electron-build",
    "build-all": "npm run clean && npm run config && npm run build",
    "config": "npm run config:copy-media && npm run config:svg",
    "config:copy-media": "node scripts/calvin-config.js",
    "config:svg": "npm run config:svg-avatars && npm run config:svg-vocal-tract",
    "config:svg-avatars": "svgo --config=config/svgo-avatars.yaml --pretty -f src/assets/images/avatars",
    "config:svg-narrator": "svgo --config=config/svgo-narrator.yaml --pretty src/assets/images/calvin-mouths.svg",
    "config:svg-vocal-tract": "svgo --config=config/svgo-vocal-tract.yaml --pretty src/assets/images/vocal-tract.svg"
  },
  "dependencies": {
    "@angular/common": "4.4.3",
    "@angular/compiler": "4.4.3",
    "@angular/compiler-cli": "4.4.3",
    "@angular/core": "4.4.3",
    "@angular/forms": "4.4.3",
    "@angular/http": "4.4.3",
    "@angular/platform-browser": "4.4.3",
    "@angular/platform-browser-dynamic": "4.4.3",
    "@ionic-native/android-full-screen": "^4.6.0",
    "@ionic-native/core": "3.12.1",
    "@ionic-native/splash-screen": "3.12.1",
    "@ionic-native/status-bar": "3.12.1",
    "@ionic/storage": "2.0.1",
    "cordova-android": "^8.0.0",
    "cordova-plugin-audioinput": "^0.3.0",
    "cordova-plugin-compat": "^1.2.0",
    "cordova-plugin-crosswalk-webview": "^2.4.0",
    "cordova-plugin-device": "^2.0.1",
    "cordova-plugin-file": "^6.0.1",
    "cordova-plugin-fullscreen": "~1.1.0",
    "cordova-plugin-ionic-keyboard": "^2.0.5",
    "cordova-plugin-ionic-webview": "^2.2.0",
    "cordova-plugin-media-capture": "^3.0.1",
    "cordova-plugin-splashscreen": "^5.0.2",
    "cordova-plugin-whitelist": "^1.3.3",
    "ionic-angular": "3.7.1",
    "ionicons": "3.0.0",
    "material-colors": "^1.2.5",
    "ng-inline-svg": "4.0.1",
    "rxjs": "5.4.3",
    "svg-path-parser": "1.1.0",
    "sw-toolbox": "3.6.0",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "7zip-bin": "^2.3.4",
    "@ionic/app-scripts": "^3.2.4",
    "@types/electron": "1.6.10",
    "@types/electron-builder": "^2.8.0",
    "@types/node": "8.0.51",
    "electron": "^6.0.4",
    "electron-builder": "19.33.0",
    "fs-extra": "4.0.2",
    "inline-worker": "1.1.0",
    "node-yaml": "^4.0.1",
    "progress": "^2.0.0",
    "svgo": "^1.3.0",
    "typescript": "2.3.4",
    "wav-decoder": "1.3.0",
    "wav-encoder": "1.3.0"
  },
  "description": "Computer Assisted Learning of Vowels Interface",
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {},
      "cordova-plugin-device": {},
      "cordova-plugin-splashscreen": {},
      "cordova-plugin-ionic-webview": {},
      "cordova-plugin-ionic-keyboard": {},
      "cordova-plugin-crosswalk-webview": {
        "XWALK_VERSION": "23+",
        "XWALK_LITEVERSION": "xwalk_core_library_canary:17+",
        "XWALK_COMMANDLINE": "--disable-pull-to-refresh-effect",
        "XWALK_MODE": "embedded",
        "XWALK_MULTIPLEAPK": "true"
      },
      "cordova-plugin-audioinput": {},
      "cordova-plugin-media-capture": {},
      "cordova-plugin-fullscreen": {}
    },
    "platforms": [
      "android"
    ]
  }
}
